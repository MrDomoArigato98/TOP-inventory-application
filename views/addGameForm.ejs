<%- include("./partials/header") %>

    <form action="/games/new/" method="POST">

        <label>Game Title:</label>
        <input value="<%= typeof gameTitle !== 'undefined' ? gameTitle : '' %>" placeholder="Tetris" type="text" name="gameTitle"
            id="gameTitle" required>

        <label>Publisher: </label>
        <input value="<%= typeof publisher !=='undefined' ? publisher: '' %>" placeholder="Ubisoft" type="publisher"
            name="publisher" id="publisher" required>

        <label>Genre: </label>
        <input value="<%= typeof genre !=='undefined' ? genre: '' %>" placeholder="RPG" type="text" name="genre"
            id="genre" required>

        <label>Release Year: </label>
        <input value="<%= typeof release_year !=='undefined' ? release_year: '' %>" placeholder="2025" type="text"
            name="releaseYear" id="releaseYear" required>

        <button type="submit">Submit</button>
        <a class="card-link" href="/">Back to home</a>

        <% if (typeof errors !=='undefined' ) { %>
            <ul class="errors">
                <% errors.forEach(err=> { %>
                    <li>
                        <%= err.msg %>
                    </li>
                    <% }) %>
            </ul>
            <% } %>
    </form>

    <%- include("./partials/footer") %>