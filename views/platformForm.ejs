<%- include("./partials/header") %>

    <form action="/platforms/<%= platform.id %>/edit" method="POST">

        <label>Platform:</label>
        <input value="<%= platform.name %>" type="text" name="platformName" id="platformName" required>

        <label>Manufacturer: </label>
        <input value="<%= platform.manufacturer %>" type="text" name="platformMnufacturer" id="platformMnufacturer"
            required>

        <label>Release Year: </label>
        <input value="<%= platform.release_year %>" type="text" name="releaseYear" id="releaseYear" required>

        <button type="submit">Submit</button>
        <a class="card-link" href="/">Back to home</a>
    </form>

    <%- include("./partials/footer") %>