<%- include("./partials/header") %>

    <h2>All Platforms</h2>

    <div class="platform-list">
        <% platforms.forEach(platform=> { %>
            <div class="platform-card">
                <h2>
                    <%= platform.name %>
                </h2>

                <p>Manufacturer: <%= platform.manufacturer %>
                </p>
                <p>Release Year: <%= platform.release_year %>
                </p>
                <a href="/platforms/<%= platform.id %>">View Games</a>
            </div>
            <% }) %>





                <%- include("./partials/footer") %>