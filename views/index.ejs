<%- include("./partials/header") %>

    <h2 class="highlight">All Platforms</h2>

    <div class="list">
        <div class="card-add">
            <a class="card-link" href="/platforms/new">
                <h2 class="card-link">Add new</h2>
            </a>
        </div>
        <% platforms.forEach(platform=> { %>
            <div class="card">

                <form action="/platforms/<%= platform.id %>/delete" method="GET" class="delete-form">
                    <button type="submit" class="delete-button" title="Delete platform">X</button>
                </form>
                <h2>
                    <%= platform.name %>
                </h2>

                <p>Manufacturer: <%= platform.manufacturer %>
                </p>
                <p>Release Year: <%= platform.release_year %>
                </p>
                <div class="card-link-flex">
                    <a class="card-link" href="/platforms/<%= platform.id %>/games">View Games</a>
                    <a class="card-link" href="/platforms/<%= platform.id %>/edit">Edit Platform</a>
                </div>
            </div>
            <% }) %>





                <%- include("./partials/footer") %>